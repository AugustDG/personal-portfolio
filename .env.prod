# Production Environment Variables
NODE_ENV=production

# Directus Configuration (REQUIRED!)
DIRECTUS_URL=https://your-directus-instance.com
DIRECTUS_STATIC_TOKEN=your_static_token_here
DIRECTUS_KEY=your_directus_key_32_characters_long
DIRECTUS_SECRET=your_directus_secret_64_characters_long
DIRECTUS_ADMIN_EMAIL=admin@yourdomain.com
DIRECTUS_ADMIN_PASSWORD=your_secure_admin_password
DIRECTUS_PUBLIC_URL=https://your-directus-instance.com

# PostgreSQL Configuration
POSTGRES_USER=directus_user
POSTGRES_PASSWORD=secure_password_here

# CORS Settings
CORS_ORIGIN=https://yourdomain.com
