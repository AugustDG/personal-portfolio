# Production Environment Variables
NODE_ENV=production

# TinaCMS Production Mode
TINA_PUBLIC_IS_LOCAL=false

# MongoDB Production Credentials (CHANGE THESE!)
MONGO_USERNAME=admin
MONGO_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DATABASE_URL=mongodb://admin:CHANGE_THIS_SECURE_PASSWORD@mongo:27017/tinacms?authSource=admin

# NextAuth Production Settings (REQUIRED!)
NEXTAUTH_SECRET=CHANGE_THIS_TO_A_SECURE_32_CHARACTER_SECRET
NEXTAUTH_URL=https://yourdomain.com

# GitHub Configuration (REQUIRED for production)
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name
GITHUB_BRANCH=main
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_token_here

# TinaCMS Production Settings (REQUIRED!)
TINA_TOKEN=your_tina_token_here
TINA_SECRET_KEY=your_tina_secret_key_here
TINA_PUBLIC_URL=https://yourdomain.com
NEXT_PUBLIC_TINA_CLIENT_ID=your_tina_client_id_here
